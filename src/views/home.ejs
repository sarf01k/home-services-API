<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ServEase</title>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="../../public/css/home.css"></link>
</head>
<body>
    <header class="header">
        <a class="logo" href="">ServEase</a>
        <ul class="nav-list">
            <li><a href="">About</a></li>
            <li><a href="">Contact Us</a></li>
        </ul>
        <a href="/logout">
            <div id="logout-btn">
                Log out
                <i class='bx bx-log-out' style='color:#ffffff'  ></i>
            </div>
        </a>
    </header>
    <section class="booking-card-section">
        <div class="booking-card">
            <h2 class="banner-text">
                Choose the service you need,<br>
                and professional help is just a booking away!
            </h2>
            <div class="booking-form">
                <input list="items" id="inputField">
                <datalist id="items">
                    <% services.forEach(service => { %>
                        <option value="<%= service.title %>"><%= service.title %></option>
                    <% }); %>
                </datalist>
                <div id="booking-card-btn">
                    Book
                </div>
            </div>
        </div>
    </section>
    <section class="services-section">
        <div class="category-card">
        <% categories.forEach(category => { %>
            <p id="category-name" value="<%= category.name %>"><%= category.name %></p>
            <% category.services.forEach(serviceId => { %>
                <% const service = services.find(s => String(s._id) === String(serviceId)); %>
                <% if (service) { %>
                    <div>
                        <p value="<%= service.title %>"><%= service.title %></p>
                    </div>
                <% } else { %>
                    <div>
                        <p>No service found for ID <%= serviceId %></p>
                    </div>
                <% } %>
            <% }); %>
        <% }); %>
        </div>
    </section>
</body>
</html>